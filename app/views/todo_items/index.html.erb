

<div class="row">
  <div class="col-sm-12">
    <h1 class="white">My Todo List</h1>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <table class ="table">

      <thead>
        <tr>
          <th class="white">DESCRIPTION</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @todo_items.each do |todo_item| %>
          <tr>
            <td class="td"><%= todo_item.description %></td>
            <td class="td"><%= link_to 'Show', todo_item %></td>
            <td class="td"><%= link_to 'Edit', edit_todo_item_path(todo_item) %></td>
            <td class="td"><%= link_to 'Delete', todo_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>

    </table>
    <p id="notice"><%= notice %></p>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <button class="btn btn-lg" ><%= link_to 'New Todo', new_todo_item_path %></button>
  </div>
</div>
